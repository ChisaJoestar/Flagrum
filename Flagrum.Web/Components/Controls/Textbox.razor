@inherits InputBase<string>

<input type="text"
       class="border border-grey-700 bg-dark-600 m-0 p-2 text-grey-400 rounded"
       style="@Style"
       @bind-value="@CurrentValueAsString"
       @bind-value:event="oninput"/>

@code
{
    public enum Variant
    {
        Small,
        Normal,
        Stretch
    }

    [Parameter]
    public Variant Size { get; set; }

    private string Style => Size switch
    {
        Variant.Small => "width: 80px;",
        Variant.Normal => "",
        Variant.Stretch => "width: 100%;",
        _ => ""
        };

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }
}